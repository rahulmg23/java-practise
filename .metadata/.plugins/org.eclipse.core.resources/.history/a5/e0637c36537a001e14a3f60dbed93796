package com.kn.patterns;



public class Pattern3 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int n = 0;
		for (int i = 0; i < 2*n; i++) {
			int colsinrow = i > i ? 2 * n - i + 1: i;
			for (int j = 0; j < colsinrow  ; j++) {
				System.out.print("*");
			}
			System.out.println();
		}
	}
}


